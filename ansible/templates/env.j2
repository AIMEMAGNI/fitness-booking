# Django settings
DEBUG={{ debug }}
SECRET_KEY={{ secret_key }}
ALLOWED_HOSTS={{ allowed_hosts | to_json }}

# Database settings
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}

# Redis settings
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}
REDIS_DB=0

# Email settings
EMAIL_HOST={{ email_host }}
EMAIL_PORT={{ email_port }}
EMAIL_USE_TLS={{ email_use_tls }}
EMAIL_HOST_USER={{ email_host_user }}
EMAIL_HOST_PASSWORD={{ email_host_password }}

# Celery settings
CELERY_BROKER_URL=redis://{{ REDIS_HOST }}:{{ REDIS_PORT }}/{{ REDIS_DB }}
CELERY_RESULT_BACKEND=redis://{{ REDIS_HOST }}:{{ REDIS_PORT }}/{{ REDIS_DB }}

# Application settings
APP_NAME={{ app_name }}
APP_DIR={{ app_dir }}
STATIC_ROOT={{ app_dir }}/app/static
MEDIA_ROOT={{ app_dir }}/app/media

# Gunicorn settings
GUNICORN_WORKERS={{ gunicorn_workers }}
GUNICORN_BIND={{ gunicorn_bind }} 